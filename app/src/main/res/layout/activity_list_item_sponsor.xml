<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/anpa_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_sponsor"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/txt_description_image"
        android:src="@drawable/ic_anpa_square" />

           <TextView
            android:id="@+id/txt_nombre_sponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="5dp"/>
           
           <TextView
            android:id="@+id/txt_descripcion_sponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"/> 
            
           <TextView
            android:id="@+id/txt_url_sponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:autoLink="web"/>

</LinearLayout>
