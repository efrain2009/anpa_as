<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title_consejo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <ImageView
                android:id="@+id/rating_star_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/txt_description_image"
                android:paddingRight="2dp"
                android:src="@drawable/ic_footprint_color" />

            <ImageView
                android:id="@+id/rating_star_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/txt_description_image"
                android:paddingRight="2dp"
                android:src="@drawable/ic_footprint_color" />

            <ImageView
                android:id="@+id/rating_star_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/txt_description_image"
                android:paddingRight="2dp"
                android:src="@drawable/ic_footprint_color" />

            <ImageView
                android:id="@+id/rating_star_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/txt_description_image"
                android:paddingRight="2dp"
                android:src="@drawable/ic_footprint_color" />

            <ImageView
                android:id="@+id/rating_star_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/txt_description_image"
                android:src="@drawable/ic_footprint_color" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>