<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_margin="10dp"
    android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title_consejo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_autor"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"/>
        
        <LinearLayout android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <ImageView
                android:id="@+id/rating_star_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_footprint_color"
                android:contentDescription="@string/txt_description_image"
                android:paddingRight="2dp" />
            <ImageView
                android:id="@+id/rating_star_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_footprint_color"
                android:contentDescription="@string/txt_description_image"
                android:paddingRight="2dp" />
            <ImageView
                android:id="@+id/rating_star_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_footprint_color"
                android:contentDescription="@string/txt_description_image"
                android:paddingRight="2dp" />
            <ImageView
                android:id="@+id/rating_star_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_footprint_color"
                android:contentDescription="@string/txt_description_image"
                android:paddingRight="2dp" />
            <ImageView
                android:id="@+id/rating_star_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_footprint_color"
                android:contentDescription="@string/txt_description_image" />
        </LinearLayout>
</LinearLayout>
