<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Anpa_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu.Anpa_theme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Anpa_theme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_anpa_theme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_anpa_theme</item>
        <item name="android:actionBarTabStyle">@style/Theme.Anpa_theme.ActionBar.TabView</item>
        <item name="android:actionBarTabBarStyle">@style/Theme.Anpa_theme.ActionBar.TabBar</item>
        <item name="android:buttonStyle">@style/Theme.Anpa_theme.Buttons</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Anpa_theme.Widget</item>
        <item name="colorPrimary">@color/action_bar_background</item>
        <item name="colorAccent">@color/button_pressed</item>
        <item name="colorPrimaryDark">@color/action_bar_background</item>
    </style>

    <style name="ActionBar.Solid.Anpa_theme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:backgroundStacked">@color/action_bar_background</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_anpa_theme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Anpa_theme</item>
    </style>

    <style name="ActionBar.Transparent.Anpa_theme" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_anpa_theme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Anpa_theme</item>
    </style>

    <style name="PopupMenu.Anpa_theme" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_anpa_theme</item>	
    </style>

    <style name="DropDownListView.Anpa_theme" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selector_spinner_title_style</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="ActionBarTabStyle.Anpa_theme" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_anpa_theme</item>
    </style>

    <style name="DropDownNav.Anpa_theme" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
<!--         <item name="android:dropDownSelector">@drawable/selectable_background_anpa_theme</item> -->
    </style>
    
    <style name="ProgressBar.Anpa_theme" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_anpa_theme</item>
    </style>
    

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Anpa_theme.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Anpa_theme</item>
<!--         <item name="android:dropDownListViewStyle">@style/DropDownListView.Anpa_theme</item> -->
    </style>

    <!-- Estilos nuevos Efra 2016 -->
    <!-- Tabs -->
    <style name="Theme.Anpa_theme.ActionBar.TabView" parent="android:style/Widget.Holo.ActionBar.TabView">
    	<item name="android:background">@drawable/selector_tab_style</item>
	</style>
	
    <!-- Tabs background -->
    <style name="Theme.Anpa_theme.ActionBar.TabBar" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">
    <item name="android:background">@color/tabs_spaces_background</item>
	</style>
	
    <!-- Botones -->
    <style name="Theme.Anpa_theme.Buttons" parent="@android:style/Widget.Button">
    <item name="android:background">@drawable/selector_button_style</item>
    <item name="android:textColor">@color/hiperlink</item> <!-- Here is specified text color -->
</style>

    <!-- Spinner -->
    <style name="SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/item_semitransparent_parent</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_spinner_title_style</item>
    </style>

</resources>