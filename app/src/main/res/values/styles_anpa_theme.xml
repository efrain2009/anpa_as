<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Anpa_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu.Anpa_theme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_anpa_theme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_anpa_theme</item>
        <item name="buttonStyle">@style/Theme.Anpa_theme.ActionButtons</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>

        <item name="android:actionBarWidgetTheme">@style/Theme.Anpa_theme.Widget</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.Anpa_theme.NoActionBar" parent="Theme.Anpa_theme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Anpa_theme.FullScreen" parent="Theme.Anpa_theme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="PopupMenu.Anpa_theme" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_anpa_theme</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DropDownListView.Anpa_theme" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selector_spinner_title_style</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="DropDownNav.Anpa_theme" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>


    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Anpa_theme.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Anpa_theme</item>
    </style>

    <!-- Tabs background -->
    <style name="Theme.Anpa_theme.ActionBar.TabBar" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">
    <item name="android:background">@color/tabs_spaces_background</item>
	</style>

    <!-- Spinner -->
    <style name="SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/item_semitransparent_parent</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_spinner_title_style</item>
    </style>

    <!-- Estilos ANPA 2.0 -->
    <style name="Theme.Anpa_theme.MainTextsStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/txt_home_buttons</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Theme.Anpa_theme.MainOptionView" parent="@android:style/Widget">
        <item name="android:layout_marginLeft">-50dp</item>
        <item name="android:layout_marginStart">-50dp</item>
        <item name="android:background">@drawable/bg_option_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_text_layout</item>
        <item name="android:layout_marginBottom">@dimen/margin_text_layout</item>
    </style>

    <style name="Theme.Anpa_theme.MainLayout" parent="@android:style/Widget">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

<!-- Action Buttons -->
    <style name="Theme.Anpa_theme.ActionButtons" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/action_buttons_text</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/selector_button_style</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <!-- Texts -->
    <style name="Theme.Anpa_theme.TextViews" parent="android:Widget.TextView">
        <item name="android:textColor">@color/action_bar_background</item>
        <item name="android:textSize">@dimen/txt_regular_text</item>
    </style>

</resources>